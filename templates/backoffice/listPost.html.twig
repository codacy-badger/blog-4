 {% extends "/backoffice/base.html.twig" %} 
 {% block title %}{% endblock %}
 {% block content %}
<div class="m-4">
<a class="nav-link " href="index.php?action=addPost">
                <button class="btn btn-primary">Ajouter un post</button></a>
    <table class="table">
        <thead>
            <tr>
                <th>Auteur</th>
                <th>Titre</th>
                <th>Modifier</th>
              <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
         {% for post in posts %}
            <tr>
                <td>{{ post.pseudo }}</td>
                <td>{{post.title}}</td>
                <td><a class="nav-link " href="index.php?action=displayForUpdatePost&id={{ post.id}}">
                <button class="btn btn-primary">Modifier</button></a></td>
                <td><a class="nav-link " href="index.php?action=deletePost">
                <button class="btn btn-primary">Supprimer</button></a></td>    
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}